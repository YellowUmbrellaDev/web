---
const {icon, name, link} = Astro.props;
---
<div class="flex justify-center m-2">
    <div class="relative group">
        <a href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="relative block no-underline"
        >
            <div class="w-24 h-24 md:w-32 md:h-32 relative overflow-visible rounded-xl md:rounded-2xl transition-all duration-500 ease-in-out select-none touch-manipulation">
                <img
                    class="w-full h-full object-contain transition-all duration-500 ease-in-out [filter:brightness(0)_saturate(100%)_invert(64%)_sepia(8%)_saturate(1451%)_hue-rotate(174deg)_brightness(102%)_contrast(89%)] group-hover:[filter:brightness(0)_saturate(100%)_invert(84%)_sepia(61%)_saturate(2794%)_hue-rotate(359deg)_brightness(102%)_contrast(101%)] p-3"
                    src={icon.src}
                    alt={name}
                    width="256"
                    height="244"
                />
            </div>
            <div class="mt-2 text-center relative">
                <p class="text-[#8294AC] font-bold text-sm md:text-base group-hover:text-[#ffd300] transition-colors duration-300">
                    {name}
                </p>
            </div>
            <!-- Barra neÃ³n que se mueve desde arriba del icono hasta debajo del texto -->
            <div class="absolute -top-0 left-0 w-full h-1.5 bg-[#ffd300] transition-all duration-700 ease-out group-hover:top-[6rem] md:group-hover:top-[7.5rem]"></div>
        </a>
    </div>
</div>

