---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.tsx";
import Head from "../components/Head.astro";
---

<Layout title="Contacto – Yellow Umbrella">
  <Head />
  <div class="mx-auto flex min-h-screen max-w-5xl items-center justify-center px-4">
    <section class="w-full">
      <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold text-white">Contacto</h1>
        <p class="mt-2 text-white/70">
          Cuéntanos tu proyecto y te responderemos lo antes posible.
        </p>
      </div>
      <ContactForm client:load />
    </section>
  </div>
</Layout>


